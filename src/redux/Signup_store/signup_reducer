import { SIGNUP_ERROR, SIGNUP_REQUEST, SIGNUP_SUCCESS } from "./actionType";

const init = {
  userName: "",
  userEmail: "",
};

export const signup_reducer = (state = init, { type, payload }) => {
  switch (type) {
    case SIGNUP_REQUEST:
      return { ...state };
    case SIGNUP_SUCCESS:
      console.log(payload);
      return { userEmail: payload.email, userName: payload.userName };
    case SIGNUP_ERROR:
      alert(payload)
      return { userEmail: "", userName: "" };
    default:
      return { ...state };
  }
};
